# open finder
cmd - g : open /Applications/Neovide.app -n

# theme
shift + alt - w : java -jar ~/dotfiles/clj_scripts/theme/target/default+uberjar/theme-0.1.0-SNAPSHOT-standalone.jar w 
shift + alt - b : java -jar ~/dotfiles/clj_scripts/theme/target/default+uberjar/theme-0.1.0-SNAPSHOT-standalone.jar b
ctrl + alt - 1 : ~/docker_and_repl.sh 1
ctrl + alt - 2 : ~/docker_and_repl.sh 2
ctrl + alt - 3 : ~/docker_and_repl.sh 3

# focus window
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north

# swap managed window
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north

# warp
shift + ctrl + alt - h : yabai -m window --warp west 
shift + ctrl + alt - l : yabai -m window --warp east 
shift + ctrl + alt - j : yabai -m window --warp south 
shift + ctrl + alt - k : yabai -m window --warp north

# balance size of windows
shift + alt - 0 : yabai -m space --balance

# control window size, modified to be intuitive
alt + ctrl - h : yabai -m window --resize left:-20:0 || yabai -m window --resize right:-20:0
alt + ctrl - l : yabai -m window --resize right:20:0 || yabai -m window --resize left:20:0
alt + ctrl - j : yabai -m window --resize bottom:0:20 || yabai -m window --resize top:0:20
alt + ctrl - k : yabai -m window --resize top:0:-20 || yabai -m window --resize bottom:0:-20

alt + ctrl - left : yabai -m window --resize left:-100:0 || yabai -m window --resize right:-100:0
alt + ctrl - right : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0
alt + ctrl - down : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
alt + ctrl - up : yabai -m window --resize top:0:-100 || yabai -m window --resize bottom:0:-100

# float / unfloat window and center on screen
alt - g : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# go zoom fullscreen
alt - f : yabai -m window --toggle zoom-fullscreen

# toggle split type
alt - e : yabai -m window --toggle split

# send window to desktop
shift + alt - x : yabai -m window --space recent
shift + alt - 1 : yabai -m window --space 1
shift + alt - 2 : yabai -m window --space 2
shift + alt - 3 : yabai -m window --space 3
shift + alt - 4 : yabai -m window --space 4
shift + alt - 5 : yabai -m window --space 5
shift + alt - 6 : yabai -m window --space 6
shift + alt - 7 : yabai -m window --space 7
shift + alt - 8 : yabai -m window --space 8

# focus space
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
