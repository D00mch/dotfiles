{
  "title": "Left Shift to ctrl+Space if alone (to redefine language switch to right shift)",
  "rules": [
    {
      "description": "Left Shift to Ctrl+Space if alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": { "optional": ["any"] }
          },
          "to": [{ "key_code": "left_shift", "lazy": true }],
          "to_if_alone": [
            { "key_code": "spacebar", "modifiers": ["left_control"] }
          ]
        }
      ]
    }
  ]
}
