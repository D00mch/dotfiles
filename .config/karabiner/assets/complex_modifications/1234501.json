{
    "title": "Change f/j to left_shift",
    "maintainers": [
        "dumch"
    ],
    "rules": [
        {
            "description": "Change f to left_shift. (Post f if pressed alone)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "f",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "f"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Change j to left_shift. (Post j if pressed alone)",
            "manipulators": [
                {
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift"
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "j"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
