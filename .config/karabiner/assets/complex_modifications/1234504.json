{
  "title": "Vim",
  "maintainers": [
    "dumch"
  ],
  "rules": [
    {
      "description": "Cmd key",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "x",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "6",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.qvacua.VimR$",
                "^com.neovide.neovide$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "q",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "left_option"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.qvacua.VimR$",
                "^com.neovide.neovide$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "t",
            "modifiers": {
              "mandatory": [
                "left_command",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "t",
              "modifiers": [
                "left_option",
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.qvacua.VimR$",
                "^com.neovide.neovide$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "r",
            "modifiers": {
              "mandatory": [
                "left_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "r",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.qvacua.VimR$",
                "^com.neovide.neovide$",
                "^com.apple.Terminal$",
                "^com.googlecode.iterm2$",
                "^co.zeit.hyper$",
                "^com.github.wez.wezterm$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Backspace for everyone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "left_option",
                "right_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.qvacua.VimR$",
                "^com.neovide.neovide$",
                "^com.apple.Terminal$",
                "^com.googlecode.iterm2$",
                "^com.jetbrains.intellij.ce$",
                "^com.google.android.studio$",
                "^co.zeit.hyper$",
                "^com.github.wez.wezterm$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "left_command",
                "right_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "u",
              "modifiers": [
                "left_control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com.qvacua.VimR$",
                "^com.neovide.neovide$",
                "^com.apple.Terminal$",
                "^com.googlecode.iterm2$",
                "^com.jetbrains.intellij.ce$",
                "^com.google.android.studio$",
                "^co.zeit.hyper$",
                "^com.github.wez.wezterm$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Jump insert mode",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_option",
                "right_command"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
